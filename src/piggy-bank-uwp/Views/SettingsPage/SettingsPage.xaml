<Page
    x:Class="piggy_bank_uwp.Views.SettingsPage.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="OnLoaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0 33 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Theme Mode" FontSize="28" FontWeight="SemiBold"/>
            <RadioButton x:Name="LightTheme" GroupName="Theme" Content="Light" Checked="RadioButton_Checked"/>
            <RadioButton x:Name="DarkTheme" GroupName="Theme" Content="Dark" Checked="RadioButton_Checked_1"/>
            <TextBlock x:Name="ChangedTextBlock" Text="You'll see your change the next time you start app"
                       Visibility="Collapsed"/>
        </StackPanel>

    </Grid>
</Page>
