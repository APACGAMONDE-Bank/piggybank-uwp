<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Name="ListViewItemCost">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Date-->
            <TextBlock Grid.Row="0" Text="{Binding Path=Date, Mode=OneWay}" FontSize="12" Foreground="Gray"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <!--Tag-->
                <Border Grid.Column="0" Height="20" DataContext="{Binding Path=Tag, Mode=TwoWay}" 
                        Background="{Binding Path=Color, Mode=OneWay}">
                    <TextBlock Text="{Binding Path=Title}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                </Border>

                <!--Cost-->
                <TextBlock Grid.Column="2" Text="{Binding Path=Cost, Mode=OneWay}" FontSize="24" 
                           Foreground="Black" HorizontalAlignment="Right"/>
            </Grid>

        </Grid>
    </DataTemplate>
    
</ResourceDictionary>
